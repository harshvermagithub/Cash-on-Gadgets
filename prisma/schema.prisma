
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  orders        Order[]
}

model Order {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  brand           String
  model           String
  variant         String
  price           Int
  status          String   @default("PENDING") // PENDING, CONFIRMED, COMPLETED, CANCELLED
  
  // Store JSON details about condition if needed, but for now simple
  conditionSummary String? // e.g. "Good Condition, Original Charger"
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
