// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  passwordHash  String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  orders        Order[]
}

model Rider {
  id            String    @id @default(cuid())
  name          String
  phone         String
  status        String    @default("available") // available, busy, offline
  password      String?   // Optional for now as per interface
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  orders        Order[]
}

model Order {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  riderId         String?
  rider           Rider?   @relation(fields: [riderId], references: [id])
  
  device          String   // Combined "Name (Variant)" string stored currently
  price           Int
  status          String   @default("Pending Pickup")
  
  address         String
  locationLat     Float?
  locationLng     Float?
  
  answers         String?  // Stored as JSON string
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Brand {
  id    String  @id // specific ID (e.g. 'apple')
  name  String
  logo  String
  
  models Model[]
}

model Model {
  id      String  @id @default(cuid())
  brandId String
  brand   Brand   @relation(fields: [brandId], references: [id], onDelete: Cascade)
  name    String
  img     String
  
  variants Variant[]
}

model Variant {
  id        String  @id @default(cuid())
  modelId   String
  model     Model   @relation(fields: [modelId], references: [id], onDelete: Cascade)
  name      String
  basePrice Int
}
